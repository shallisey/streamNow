{{> header}}

<h1 class="text-center">Login</h1>

<div class="container-fluid form-size">
    <form action="http://httpbin.org/post" method="POST" id="loginForm">
    <div class="mb-3">
        <label for="emailInputForLogin" class="form-label"></label>
        <input type="email" name="loginEmail" class="form-control" id="emailInputForLogin" placeholder="Email address">
        <div id="emailHelp"></div>
    </div>
    <div class="mb-3">
        <label for="passwordInputForLogin" class="form-label"></label>
        <input type="password" name="loginPassword" class="form-control" id="passwordInputForLogin" placeholder="Password">
    </div>
    <div class="text-center">
        <div id="email-help">This submission will take you to http://httpbin.org/post.</div>
        <button type="submit" class="text-center btn btn-primary">Login</button>
    </div>


</form>
</div>

<div class="container-fluid form-size">
    
    <form action="/login" method="POST" id="signup-form">
    <div class="mb-3">
        <label for="firstName" class="form-label"></label>
        <input type="name" name="firstName" class="form-control" id="firstName" placeholder="First name">
        <div id="emailHelp"></div>
    </div>
    <div class="mb-3">
        <label for="lastName" class="form-label"></label>
        <input type="name" name="lastName" class="form-control" id="lastName" placeholder="Last name">
        <div id="emailHelp"></div>
    </div>
    <div class="mb-3">
        <label for="emailInputForSignUp" class="form-label"></label>
        <input type="email" name="emailSignup" class="form-control" id="emailInputForSignUp" placeholder="Email address">
        <div id="emailHelp"></div>
    </div>
    <div class="mb-3">
        <label for="passwordInputForSignUp" class="form-label"></label>
        <input type="password" name="passwordSignup" class="form-control" id="passwordInputForSignUp" placeholder="Password">
    </div>
    <div class="text-center">
        <button type="submit" class="text-center btn btn-primary">Signup</button>
    </div>
   
</form>
</div>
<div id="signup-submission-data">

</div>

<script src="/js/form.js"></script>


