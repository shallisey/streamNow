{{> header}}

<div class="container" id="page-container">
  <div class="carousel slide" data-ride="carousel" id="trending-carousel">
    <ol class="carousel-indicators">
      {{#each results}}
      {{#if @first}}
      <li data-target="trending-carousel" data-slide-to="{{@index}}" class="active">
        
      </li>
      {{else}}
      <li data-target="trending-carousel" data-slide-to="{{@index}}">
      </li>
      {{/if}}
      {{/each}}
    </ol>
    <div class="carousel-inner ">
      {{#each results}}
      {{#if @first}}
      <div class="carousel-item active">
        <img class="d-block w-100 img-fluid" src="https://image.tmdb.org/t/p/w342{{this.poster_path}}" alt="{{this.title}}">
        <div class="carousel-caption d-none d-md-block" id="carousel-link">
          <a href="/{{this.media_type}}/{{this.id}}">{{this.title}}</a>
         
        </div>
      </div>
      {{else}}
      <div class="carousel-item">
          
        <img class="d-block w-100 img-fluid" src="https://image.tmdb.org/t/p/w342{{this.poster_path}}" alt="{{this.title}}">
        <div class="carousel-caption d-none d-md-block" id="carousel-link">
          <a href="/{{this.media_type}}/{{this.id}}">{{this.title}}</a>
          
            
        </div>
      </div>
      {{/if}}
      {{/each}}

    </div>
    <a href="#trending-carousel" class="carousel-control-prev" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Prev</span>
      </a>
      <a href="#trending-carousel" class="carousel-control-next" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
  </div>
